<dt><%=h audit.auditable_type %> #<%=h audit.auditable_id %> <%=h past_tense(audit.action) %> on <%=h audit.created_at.to_s(:long) %></dt>
<%- if audit.changes -%>
  <%- audit.changes.each do |column, change| -%>
    <%- unless change.blank? -%>
      <dd><%=h column %>: <%=h change%></dd>
    <%- end -%>
  <%- end -%>
<%- end -%>
