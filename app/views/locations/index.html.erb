<%- content_for :head do -%>
  <%= javascript_include_tag "http://maps.google.com/maps?file=api&amp;v=2&amp;key=#{GOOGLE_MAPS_API_KEY}" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/prototype/1.6/prototype.js" %>
  <%= javascript_include_tag locations_path %>
<%- end -%>
<h1>Listing locations</h1>

<div id="map"></div>

<table>
  <tr>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Signs</th>
  </tr>

<% for location in @locations %>
  <tr>
    <td><%=h location.street %></td>
    <td><%=h location.city %></td>
    <td><%=h location.state %></td>
    <td><%=h location.zip %></td>
    <td><%=h location.signs %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New location', new_location_path %>
